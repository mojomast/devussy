  background-color: #3b6ea5;
  /* Fallback blue */
  background-image: url('/bliss-bg.jpg') !important;
  background-size: cover !important;
  background-position: center !important;
  background-attachment: fixed !important;
  background-repeat: no-repeat !important;
}

[data-theme="bliss"] .bg-logo {
  display: none;
}

/* XP Window Chrome */
[data-theme="bliss"] .window-frame {
  border: 3px solid;
  border-color: #0054e3 #003c74 #003c74 #0054e3;
  border-radius: 8px 8px 0 0;
  box-shadow:
    0 0 0 1px rgba(255, 255, 255, 0.8) inset,
    0 4px 12px rgba(0, 0, 0, 0.3),
    0 2px 4px rgba(0, 0, 0, 0.2);
  background: rgba(236, 233, 216, 0.98);
}

/* XP Window Header */
[data-theme="bliss"] .window-header {
  background: linear-gradient(to bottom,
      #0058ee 0%,
      #3593ff 4%,
      #288efb 6%,
      #2461aa 50%,
      #2461aa 100%);
  color: white;
  text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.5);
  font-weight: bold;
  padding: 6px 8px;
  border-radius: 5px 5px 0 0;
}

/* XP Buttons */
[data-theme="bliss"] button {
  border: 1px solid #003c74;
  border-radius: 3px;
  background: linear-gradient(to bottom, #fff 0%, #ece9d8 100%);
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
  color: black;
}

[data-theme="bliss"] button:hover {
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
  background: linear-gradient(to bottom, #fff 0%, #f3f3f3 100%);
}

[data-theme="bliss"] button:active {
  background: linear-gradient(to bottom,
      #d8d0bb 0%,
      #ece9d8 50%,
      #ffffff 100%);
  padding: 0 10px 0 5px;
  margin-right: 10px;
  height: 100%;
  display: flex;
  align-items: center;
  border: 1px solid #2B5F11;
  box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.3);
  position: relative;
}

[data-theme="bliss"] .taskbar-main>div:first-child svg {
  color: white !important;
  filter: drop-shadow(1px 1px 1px rgba(0, 0, 0, 0.5));
}

[data-theme="bliss"] .taskbar-main>div:first-child::after {
  content: "Start";
  color: white;
  font-weight: bold;
  font-style: italic;
  margin-left: 4px;
  text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.5);
  font-size: 14px;
}

/* Taskbar Buttons */
[data-theme="bliss"] .taskbar-main button {
  background: transparent !important;
  border: none !important;
  box-shadow: none !important;
  color: white !important;
  border-radius: 2px !important;
  margin: 2px !important;
  padding: 4px 8px !important;
  height: 24px !important;
  min-width: auto !important;
  max-width: none !important;
}

[data-theme="bliss"] .taskbar-main button:hover {
  background: rgba(0, 0, 0, 0.1) !important;
  box-shadow: inset 0 0 2px rgba(0, 0, 0, 0.3) !important;
}

[data-theme="bliss"] .taskbar-main button.bg-white\/10 {
  background: #1F4EBF !important;
  box-shadow: inset 1px 1px 2px rgba(0, 0, 0, 0.5) !important;
}

/* XP Primary Buttons */
[data-theme="bliss"] button[class*="bg-primary"],
[data-theme="bliss"] button[class*="variant-default"] {
  background: linear-gradient(to bottom,
      #3c9dff 0%,
      #0078d7 50%,
      #0054e3 100%);
  border-color: #003c74;
  color: #ffffff;
  text-shadow: 0 1px 1px rgba(0, 0, 0, 0.3);
}

[data-theme="bliss"] button[class*="bg-primary"]:hover {
  background: linear-gradient(to bottom,
      #52adff 0%,
      #1088e7 50%,
      #1064f3 100%);
}

/* XP Inputs */
[data-theme="bliss"] input,
[data-theme="bliss"] textarea,
[data-theme="bliss"] select {
  background: #ffffff;
  border: 1px solid;
  border-color: #7f9db9 #b9d7f5 #b9d7f5 #7f9db9;
  box-shadow: inset 1px 1px 2px rgba(0, 0, 0, 0.1);
}

/* XP Cards */
[data-theme="bliss"] [class*="card"],
[data-theme="bliss"] [class*="Card"] {
  background: rgba(236, 233, 216, 0.95);
  border: 1px solid #919b9c;
  box-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
}

/* XP Scrollbars */
[data-theme="bliss"] ::-webkit-scrollbar {
  width: 16px;
  height: 16px;
}

[data-theme="bliss"] ::-webkit-scrollbar-track {
  background: #d4d0c8;
  border: 1px solid #919b9c;
}

[data-theme="bliss"] ::-webkit-scrollbar-thumb {
  background: linear-gradient(to right,
      #ffffff 0%,
      #ece9d8 50%,
      #d8d0bb 100%);
  border: 1px solid;
  border-color: #ffffff #003c74 #003c74 #ffffff;
}

[data-theme="bliss"] ::-webkit-scrollbar-thumb:active {
  background: linear-gradient(to right,
      #d8d0bb 0%,
      #ece9d8 50%,
      #ffffff 100%);
}

/* XP Focus Rings */
[data-theme="bliss"] *:focus-visible {
  outline: 1px dotted #000000;
  outline-offset: 2px;
}