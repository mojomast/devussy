}

/* Theme: Terminal (Matrix green) */
[data-theme="terminal"] {
  --background: #000000;
  --foreground: #00ff00;
  --card: #0a0e0a;
  --card-foreground: #00ff00;
  --popover: #0a0e0a;
  --popover-foreground: #00ff00;
  --primary: #00ff00;
  --primary-foreground: #000000;
  --secondary: #003300;
  --secondary-foreground: #00ff00;
  --muted: #003300;
  --muted-foreground: #00aa00;
  --accent: #004400;
  --accent-foreground: #00ff00;
  --destructive: #ff0000;
  --border: #00ff00;
  --input: #003300;
  --ring: #00ff00;
}

/* Terminal theme: monospace fonts and green glow */
[data-theme="terminal"] * {
  font-family: 'Courier New', monospace !important;
  text-shadow: 0 0 5px rgba(0, 255, 0, 0.5);
}

[data-theme="terminal"] .window-frame {
  border: 1px solid var(--border);
  box-shadow: 0 0 10px rgba(0, 255, 0, 0.3);
}

[data-theme="terminal"] button {
  box-shadow: 0 0 5px rgba(0, 255, 0, 0.2);
}

/* Theme: Bliss (Windows XP) - ENHANCED */
[data-theme="bliss"] {
  --background: #ffffff;
  --foreground: #000000;
  --card: rgba(236, 233, 216, 0.95);
  --card-foreground: #000000;
  --popover: #ece9d8;
  --popover-foreground: #000000;
  --primary: #0054e3;
  --primary-foreground: #ffffff;
  --secondary: #ece9d8;
  --secondary-foreground: #000000;
  --muted: #d4d0c8;
  --muted-foreground: #666666;
  --accent: #316ac5;
  --accent-foreground: #ffffff;
  --destructive: #c42b1c;
  --border: #0054e3;
  --input: #ffffff;
  --ring: #0054e3;
}

/* Bliss: Fullscreen background on body */
[data-theme='bliss'] body {
  background-image: url('/bliss-bg.jpg') !important;
  background-size: cover !important;

  body {
    @apply bg-background text-foreground;
